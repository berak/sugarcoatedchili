#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>
set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

pwd 

git clone https://github.com/berak/sugarcoatedchili.git
tar -xf sugarcoatedchili/ocv.tgz
tar -xf sugarcoatedchili/ocv3.tgz

curl http://apache.mirror.digionline.de//ant/binaries/apache-ant-1.9.4-bin.tar.gz > ant.tgz
tar zxf ant.tgz

ls

# make
echo "-----> Compiling with Make"
make 2>&1 | indent

